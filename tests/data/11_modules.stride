use Gamma version 1.0 on PC

module SizeTest {
    ports:          [
        port InputPort {
            name:       'input'
            main: on
            direction:  'input'
            block:      Input
            rate:       InputPortRate
            domain:     InputPortDomain
            size:       InputPortSize
            meta:       "The module's primary input port."
        },
        port OutputPort {
            name:       'output'
            main: on
            direction:  'output'
            block:      Output
            rate:       OutputPortRate
            domain:     OutputPortDomain
            size:       OutputPortSize
            meta:       "The module's primary output port."
        }
    ]
    blocks:         [
        signal Input [InputPortSize] {
            rate:       InputPortRate
            domain:     InputPortDomain
            reset:      none
        },
        signal Output [OutputPortSize] {
            rate:       OutputPortRate
            domain:     OutputPortDomain
            reset:      none
        }
        constant InputPortSize { value: 3}
        constant OutputPortSize {value: 2}
    ]
    streams: [
                Input[1] >> Input[InputPortSize];
        ]
}

# Check auto declaration of input and output blocks
module BlocksTest {
    ports:          [
        port InputPort {
            name:       'input'
            main: on
            direction:  'input'
            block:      Input
            rate:       InputPortRate
            domain:     InputPortDomain
            size:       InputPortSize
            meta:       "The module's primary input port."
        },
        port OutputPort {
            name:       'output'
            main: on
            direction:  'output'
            block:      Output
            rate:       OutputPortRate
            domain:     OutputPortDomain
            size:       OutputPortSize
            meta:       "The module's primary output port."
    }
]
    blocks: [
        signal Test {
            domain: none
        }
]
    streams: [
        Input >> Test;
        Test >> Output; # Test should be computed in the Output domain
        Test >> AutoDeclared; # No "undefined symbol" error should be generated in this case
]
}

signal InSignal[3] {}
signal OutSignal[2] {}

InSignal >> SizeTest() >> OutSignal;

module DuplicatePortName {
    ports:          [
        port InputPort {
            name:       'input'
            main: on
            direction:  'input'
            block:      Input
        }
        ]
    blocks: [
        signal Test {
            domain: none
        }
]
    streams: [
        Input >> Test;
]
streams: [
    Input >> Test;
]
}
