 # FIXME AudioRate needs to be streamRate
module Select {
    input: Input
    output: Output
    ports:  [
		port WhenOnProperty {
    	   name: "whenOn"
           block: WhenOn
           meta: ""
        },
        port WhenOffProperty {
            name: "whenOff"
            block: WhenOff
            meta: ""
        }
    ]
    blocks: [
        switch Input {
                default :       on
                rate:           AudioRate
                domain:         streamDomain
        },
        signal Output {
                default :       0.0
                rate:           AudioRate
                domain:         streamDomain
        },
        signal WhenOn {
                default :       0.0
                rate:           AudioRate
                domain:         streamDomain
        },
        signal WhenOff {
                default :       0.0
                rate:           AudioRate
                domain:         streamDomain
        },
        _selectType SelectBlock {}
    ]
    streams: [
        [Input, WhenOn, WhenOff]  >> SelectBlock >> Output;
    ]
    meta: ""
}

